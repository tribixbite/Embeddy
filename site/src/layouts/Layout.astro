---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Embeddy — Swiss-army knife for embeddable media on Android",
  description = "Animated WebP converter, image compressor, OG metadata inspector, and anonymous file uploader. Built with Kotlin 2, Jetpack Compose, and Material 3.",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImage = new URL(`${import.meta.env.BASE_URL}og-preview.webp`, Astro.site);
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#1a1025" />
    <meta name="color-scheme" content="dark" />
    <meta name="robots" content="index, follow" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Embeddy" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:type" content="image/webp" />
    <meta property="og:image:width" content="800" />
    <meta property="og:image:height" content="420" />
    <meta property="og:image:alt" content="Embeddy — Convert, Inspect, Upload, Squoosh. Four tools for embeddable media on Android." />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content="Embeddy — Convert, Inspect, Upload, Squoosh. Four tools for embeddable media on Android." />

    <!-- Structured Data: SoftwareApplication -->
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        name: "Embeddy",
        operatingSystem: "Android",
        applicationCategory: "MultimediaApplication",
        description: description,
        url: canonicalURL.toString(),
        downloadUrl:
          "https://github.com/tribixbite/Embeddy/releases/latest",
        softwareVersion: "0.1.12",
        license: "https://www.gnu.org/licenses/gpl-3.0.html",
        datePublished: "2025-01-01",
        author: {
          "@type": "Person",
          name: "tribixbite",
          url: "https://github.com/tribixbite",
        },
        screenshot: ogImage.toString(),
        offers: {
          "@type": "Offer",
          price: "0",
          priceCurrency: "USD",
        },
      })}
    />

    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <!-- Icons -->
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.BASE_URL}favicon.svg`}
    />
    <link
      rel="icon"
      type="image/x-icon"
      href={`${import.meta.env.BASE_URL}favicon.ico`}
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href={`${import.meta.env.BASE_URL}apple-touch-icon.png`}
    />
  </head>
  <body
    class="min-h-screen bg-dark-950 text-white font-body antialiased"
  >
    <slot />
  </body>
</html>
